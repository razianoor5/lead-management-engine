<p>
  <%= comment.body %> |
  <%= current_user.email %> |
  <% if current_user.business_developer? %>
    <% if @phase %>
      <%= link_to 'Destroy', lead_phase_comment_path(lead , @phase, comment), method: :delete, data: { confirm: 'Are you sure?' } %>
    <% else %>
      <%= link_to 'Destroy', lead_comment_path(@lead, comment), method: :delete, data: { confirm: 'Are you sure?' } %>
    <% end %>
  <% else %>
    <%= link_to 'Destroy', phase_comment_path(@phase, comment), method: :delete, data: { confirm: 'Are you sure?' } %>
  <% end %>
</p>



<h1>Leads</h1>

<table>
  <thead>
    <tr>
      <th>Project name</th>
      <th>Client name</th>
      <th>Client email</th>
      <th>Client contact</th>
      <th>Platform used</th>
      <th>Status</th>
      <th colspan='3'></th>
    </tr>
  </thead>

  <tbody>
    <% @leads.each do |lead| %>
      <tr>
        <td><%= lead.project_name %></td>
        <td><%= lead.client_name %></td>
        <td><%= lead.client_email %></td>
        <td><%= lead.client_contact %></td>
        <td><%= lead.platform_used %></td>
        <td><%= lead.is_sale %></td>
        <td><%= link_to 'Show', lead %></td>
        <td><%= link_to 'Phases', lead_phases_path(lead) %></td>
        <td><%= link_to 'Edit', edit_lead_path(lead) %></td>
        <td><%= link_to 'Destroy', lead, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>


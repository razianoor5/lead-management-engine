<p id='notice'><%= notice %></p>
<p>
  <strong>Project name:</strong>
  <%= @lead.project_name %>
</p>

<p>
  <strong>Client name:</strong>
  <%= @lead.client_name %>
</p>

<p>
  <strong>Client email:</strong>
  <%= @lead.client_email %>
</p>

<p>
  <strong>Client contact:</strong>
  <%= @lead.client_contact %>
</p>

<p>
  <strong>Platform used:</strong>
  <%= @lead.platform_used %>
</p>

<p>
  <strong>Is sale:</strong>
  <%= @lead.is_sale %>
</p>
<h3><strong>Comments:</strong></h3>
<%= render partial: 'comments/comments', collection: @lead.comments, as: :comment %>
<%= render partial: 'comments/lead_form', locals: {commentable: @lead} %>

<%= link_to 'Phases', lead_phases_path(@lead) %> |
<%= link_to 'Edit', edit_lead_path(@lead) %> |
<%= link_to 'Back', leads_path %> |
<% if @lead.open? %>
  <%= link_to 'Close Lead' ,lead_close_path(@lead) %>
<% end %>


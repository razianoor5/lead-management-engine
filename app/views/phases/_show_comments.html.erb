<div class='col-lg-3 ml-0 mr-auto pt-3 mb-1' >
  <h4><strong>Comments:</strong></h4>
</div>

<%= render partial: 'comments/comments', collection: @phase.comments, as: :comment, locals: {lead: @phase.lead} %>

<%if policy(@phase).complete? %>
  <%= render partial: 'comments/phase_form', locals: {lead: @phase.lead} %>
<% end %>

<%if policy(@phase).edit? %>
  <%= link_to 'Edit', edit_lead_phase_path(lead_id: @phase.lead.id, id: @phase.id), class: 'btn btn-primary' %>
<% end %>

<%= link_to 'Back', lead_phases_path(lead_id: @phase.lead),class: 'btn btn-primary' %>

<table>
  <thead>
    <tr>
      <th>Phase type</th>
      <th>Assignee</th>
      <th>Start date</th>
      <th>Due date</th>
      <th>Lead</th>
      <th>Status</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @phases.each do |phase| %>
      <tr>
        <td><%= phase.phase_type %></td>
        <td><%= phase.assignee %></td>
        <td><%= phase.start_date %></td>
        <td><%= phase.due_date %></td>
        <td><%= phase.lead.client_email %></td>
        <td><%= phase.is_complete %></td>
        <td><%= link_to 'Show', phase_path(id:phase.id) %></td>
<!--         <td><%= link_to 'Edit', edit_phase_path(id:phase.id) %></td>]
 -->        <td><%= link_to 'Destroy', phase_path(id:phase.id), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>


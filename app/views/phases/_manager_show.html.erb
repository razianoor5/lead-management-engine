<h3>Engineers</h3>
<%= render partial: "phases/engineers", collection: @phase.users.where(role: 'engineer'), as: :user %>
<br>

<%= form_for @phase, url: phase_engineers_url, method: :post do |f| %>
  <%= collection_select(:engineer, :user_id, @users, :id, :email, prompt: true) %>
  <div class="actions">
    <%= f.submit 'add engineer' %>
  </div>
<% end %>

<h3><strong>Comments:</strong></h3>

<%= render partial: "comments/comments", collection: @phase.comments, as: :comment %>
<%= render partial: "comments/manager_phase_comment_form" %>

<%= link_to 'Edit', edit_phase_path(id:@phase.id) %> |
<%= link_to 'Back', phases_path %>
